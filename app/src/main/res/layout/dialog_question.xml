<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_custom_dialog"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/text_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_create_new_connect"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_question_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_create_new_connect"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_question_negative"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/background_btn_tr"
            android:padding="6dp"
            android:text="@string/text_cancel"
            android:textColor="@color/green" />

        <Button
            android:id="@+id/btn_question_positive"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_btn_tr"
            android:padding="6dp"
            android:text="@string/text_ok"
            android:textColor="@color/green" />
    </LinearLayout>

</LinearLayout>