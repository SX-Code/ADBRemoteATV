<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_custom_dialog"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_update_app"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_update_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/progress_bar_update"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        custom:progress_reached_color="@color/green"
        custom:progress_text_color="@color/green"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_update_negative"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@drawable/background_btn_tr"
            android:padding="6dp"
            android:text="@string/text_cancel"
            android:textColor="@color/green" />

    </LinearLayout>

</LinearLayout>